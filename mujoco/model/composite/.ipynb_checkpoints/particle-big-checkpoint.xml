<mujoco model="Particle">
<!-- Degree of Freedom: 3000
     Actuators: 0
-->
  <include file="floor.xml"/>

  <!-- <option solver="CG" tolerance="1e-6" timestep=".01"/> -->

  <option timestep="0.005" solver="Newton" iterations="30" tolerance="1e-10" jacobian="sparse" cone="pyramidal"/>

  <size nconmax="6000" njmax="6000" nstack="50000000"/>

  <visual>
    <map stiffness="100"/>
  </visual>



  <default>
    <default class="wall">
      <geom type="plane" size="1.5 9.5 .05"/>
    </default>
<!--
    <default class="bug">
      <body>
        <joint name="ball" type="ball" />
        <geom size=".025" rgba=".8 .2 .1 1"/>
      </body>
    </default>
-->
    <default class="bug">

        <geom size=".125" rgba=".1 .8 .1 1"/>

    </default>

  </default>

  <worldbody>
    <geom name="+x" class="wall" zaxis="1 0 0"  pos="-9.5 0 -.25"/>
    <geom name="-x" class="wall" zaxis="-1 0 0" pos="9.5 0 -.25"/>
    <geom name="+y" class="wall" zaxis="0 1 0"  pos="0 -9.5 -.25"/>
    <geom name="-y" class="wall" zaxis="0 -1 0" pos="0 9.5 -.25"/>
<!--
    <composite type="particle" count="10 10 1" spacing="0.17" offset="0 0 1">
      <geom class="bug"/>
    </composite>

    
<composite type="particle" count="10 10 1" spacing="0.17" offset="0 0 1">
      <joint kind="main"/>
      <geom size=".025" rgba=".8 .2 .1 1"/>
    </composite>

    <composite type="particle" count="10 10 1" spacing="0.17" offset="0 0 3">
      <joint kind="main"/>
      <geom class="bug" size=".025" rgba=".8 .2 .1 1"/>
    </composite>

-->


    <body pos="0 0 0.15">
        <freejoint name="ball1" />
        <geom size=".04" material="matmarble" />
    </body>
      
    <body pos="0 0.1 0.15">
        <freejoint name="ball2" />
        <geom size=".04" material="matmarble" />
    </body>



  </worldbody>

  <actuator>
      <velocity name="x_pos_servo1" joint="ball1" gear="1 0 0 0 0 0" kv="1" />
      <velocity name="y_pos_servo1" joint="ball1" gear="0 1 0 0 0 0" kv="1" />
      
      <velocity name="x_pos_servo2" joint="ball2" gear="1 0 0 0 0 0" kv="1" />
      <velocity name="y_pos_servo2" joint="ball2" gear="0 1 0 0 0 0" kv="1" />
  </actuator>

  <sensor>
    <rangefinder joint="ball1"/>
  </sensor>

<!--
  <actuator>
    <motor joint="ball" name="x-torque" gear="1 0 0 0 0 0" ctrllimited="true" ctrlrange="-0.01 0.01"/>
    <motor joint="ball" name="y-torque" gear="0 1 0 0 0 0" ctrllimited="true" ctrlrange="-0.01 0.01"/>
  </actuator>-->
</mujoco>
